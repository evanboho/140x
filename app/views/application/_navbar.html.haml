  %section.top-bar-section
    %ul.title-area
      %li.name
        %h1= link_to "CrowdTweet", root_path
    %ul.right
      - if current_user
        %li= link_to "Access", tweeter_grants_path(current_user)
        %li.divider
        %li= link_to "@" + current_user.screen_name, dashboard_path(current_user.screen_name)
        %li.divider
        %li
          = link_to "Sign Out", sign_out_path
      - else
        %li= link_to "Sign In", sign_in_path

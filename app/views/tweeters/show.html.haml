- if current_user
  %br
  %br
  .row
    .large-3.columns
      %h3 Tweet As:
      %hr
      %ul
        %li= link_to current_user.screen_name, dashboard_path(current_user.screen_name)
        - current_user.privileges.current.each do |grant|
          %li= link_to grant.granter.screen_name, dashboard_path(grant.granter.screen_name)

    .large-6.columns
      %h3 Tweet:
      %hr
      = form_for Tweet.new do |f|
        .row
          #letters-remaining.large-5.columns 140
          .large-4.columns= "@" + @tweeter.screen_name
        = f.text_area :body
        .row
          .columns
          .large-4.columns
            = f.submit "Tweet", class: "button success round"
    .large-3.columns
      %h3
        Interactions:
      %hr
